<?xml version="1.0"?>
<!-- Chapter 4 - Listing 4.12 -->
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml">

    <!-- Define a date formatter and its properties -->
    <mx:DateFormatter id="dateFrm" 
    	formatString="MM/DD/YY"  />
<mx:VBox width="100%" height="100%" backgroundColor="#FFFFFF"
	verticalAlign="middle" horizontalAlign="center">
	<mx:Panel title="Date Formatter"
        paddingLeft="10" paddingRight="10" paddingBottom="10" paddingTop="10"
        horizontalAlign="center">
		
		<mx:DateField id="dteField"/>
		<mx:TextArea text="{dateFrm.format(dteField.text)}" />
	
	</mx:Panel>	
</mx:VBox>
		
</mx:Application>

